<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"

    tools:context=".Rule_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/yuio"
            android:padding="30dp"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/ruletextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rules for Adopting Child"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible" />


        <TextView
            android:id="@+id/ruleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Do's : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />


        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/ruleView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Only adopt from Specialised Adoption Agencies(SAAs) recognised by state governments."
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="visible" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/ruleView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Follow the steps for completing your registration. "
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="visible" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/ruleView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Please upload documents as per instructions. "
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="visible" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/ruleView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Keep away from touts/ middlemen. There is no role of touts/middlemen in adoption. They will mislead
you to adopt a child illegally. "
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="visible" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/ruleView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. For adoption related charges, please refer schedule-13 of the Guidelines Governing Adopting of children(2015). "
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="visible" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/ruleView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. Always make payment by cheque or draft and collect your receipt. "
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="visible" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/ruleView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7. Through illegal adoption, you may unintentionally become part of child trafficking network. Save yourself from legal ramifications."
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/ruleView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Dont's: "
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/ruleView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Do not approch any nursing home, hospital, maternity home, unauthorised institution or individual for adoption."
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="visible" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/ruleView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Do not upload any incorrect document, else your registration will be cancelled."
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="visible" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/ruleView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Do not pay any additional adoption charges other than what is prescribed in orgnisations guidelines."
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="visible" />



    </LinearLayout>

</ScrollView>